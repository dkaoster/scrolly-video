    "eslint-plugin-svelte3": "^3.4.0",
    "prettier": "^3.2.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.46.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-css-only": "^3.1.0",
