    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-vue": "^6.0.0",
    "sirv-cli": "^2.0.2",
    "svelte": "^3.46.2",
    "svelte-markdown": "^0.2.3",
